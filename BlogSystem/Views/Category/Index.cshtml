@model IEnumerable<Bloggsystem.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Hantera kategorier</h2>

<p>
    @Html.ActionLink("Skapa ny kategori", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category1)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @Html.DisplayFor(ModelItem => item.category1)
            </td>
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.categoryID }) |
                @Html.ActionLink("Radera", "Delete", new { id = item.categoryID })
            </td>
        </tr>
    }

</table>
