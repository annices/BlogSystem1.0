
<p style="margin-top: 30px">
    <span class="success_msg">@ViewBag.success</span>
    <span class="error_msg">@ViewBag.error</span>
</p>

<fieldset>
    <legend>Ändra lösenord</legend>

    <form method="post" class="form-horizontal" action="~/User/UpdatePassword">
        <div class="form-group">
            <label for="password2" class="control-label col-md-2" style="text-align: left">Nytt lösenord:</label>
            <div class="col-md-10">
                <input type="text" name="password2" id="password2" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uppdatera" class="btn btn-default" />
            </div>
        </div>
    </form>

</fieldset>
